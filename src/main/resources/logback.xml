<configuration>

    <contextName>WebContext</contextName>
    <property name="BASE_PATH" value="/var/log" />
    <property name="FILE_NAME" value="logFile" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%thread] [%X{APPNAME}] %logger{5}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${BASE_PATH}/${FILE_NAME}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%thread] [%X{APPNAME}] %logger{5}:%L - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <logger name="com.jibi" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE "/>
    </logger>

    <appender name="STDOUT" class="ch.qos.logback.classic.AsyncAppender" level="OFF">
        <appender-ref ref="CONSOLE" />
        <queueSize>10000</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    <appender name="STDFILE" class="ch.qos.logback.classic.AsyncAppender" level="OFF">
        <appender-ref ref="FILE" />
        <queueSize>10000</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <root>
        <level value="${logger.root.level:-WARN}"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="STDFILE"/>
    </root>

</configuration>